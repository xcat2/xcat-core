runcmd("$cmd");
$cmd = "lsdef -t site -i domain | grep \"\=$domain_value\$\"";
runcmd("$cmd");
$cmd = "lsdef -t site -i fsptimeout | grep \"\=$fsptimeout_value\$\"";
