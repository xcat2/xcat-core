  </users>
  
  
  <zfcp>
    <devices config:type="list"/>
  </zfcp>
  
  
  <!-- Scripts (post-script) -->
  <configure>
    <scripts>
    </scripts>
  </configure>
</profile>
AUTOYASTEND
	return $tmpl;
}
